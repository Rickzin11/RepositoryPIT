@model List<Pjt_Software.Models.Servico>

@{
    ViewData["Title"] = "Lista de Serviços";
}

<link rel="stylesheet" href="~/css/stylecrud.css" asp-append-version="true" />

<div class="container">
    <div class="funcionario-container">
        <h3>Lista de Serviços</h3>
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Preço</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
            @if (Model != null && Model.Any())
              {
                @foreach (var servico in Model)
                {
                    <tr>
                        <td>@servico.Id</td>
                        <td>@servico.Nome</td>
                        <td>@servico.Descricao</td>
                        <td>@servico.Preco.ToString("C")</td>
                        <td>
                            <a asp-controller="Servicos" asp-action="Edit" asp-route-id="@servico.Id" class="btn btn-primary">Editar</a>
                            <a asp-controller="Servicos" asp-action="Delete" asp-route-id="@servico.Id" class="btn btn-danger">Excluir</a>
                        </td>
                    </tr>
                }
              }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Nenhum servico cadastrado.</td>
                </tr>
            }
            </tbody>
        </table>
        <div>    
            <a asp-controller="Servicos" asp-action="Create" class="btn btn-success">Adicionar Novo Serviço</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </div>
</div>